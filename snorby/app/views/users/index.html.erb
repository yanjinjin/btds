<%= title "用户管理" do -%>

	<%= menu_item "添加用户", new_user_path, 'icons/add-user.png' %>
	<%= render :partial => 'settings/menu' %>

<% end %>

<div id="users" class='grid_12 page boxit'>
	
	<table class='default' border="0" cellspacing="0" cellpadding="0">
		<tr>
			<th>启用</th>
			<th>管理员</th>
			<th>用户名</th>
			<th>登录名</th>
			<th>登录次数</th>
			<th>上次登录IP</th>
			<th>上次登录时间</th>
			<th>删除</th>
		</tr>
		<tbody class='users'>
			<%= render @users %>
		</tbody>
	</table>


	<%= pager(@users, 'users') %>
	
</div>
